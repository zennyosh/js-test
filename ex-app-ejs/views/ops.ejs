<!DOCTYPE html>
<html lang="ja">

<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <title><%= title %></title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script>
    $(document).ready(function(){
      $('#btn').click(function(){
        var n = $('#num').val();
        $.getJSON("/ops2?id=" + n, function(json){
          msg = json.p['$'];
          console.log(msg);
          $('#msg').html(msg);
        });
      });
    });
  </script>
</head>

<body>
  <head>
    <h1><%= title %></h1>
  </head>
  <div role="main">
    <p id="msg"><%- content %></p>
    <input type="text" name="num" id="num">
    <input type="button" id="btn" value="GETGET!">
  </div>
  </body>
</html>
